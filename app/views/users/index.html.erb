<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>
      <h2>User info</h2>
      <!--部分テンプレート：ユーザー情報欄-->
      <%= render 'info', user: current_user %>
      
      <h2 class="mt-3">New book</h2>
      <!--部分テンプレート：本の投稿フォーム-->
      <%= render 'books/form', book: @book %>
    </div>    
      
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <!--部分テンプレート：ユーザー一覧-->
      <%= render 'index',users: @users %>
    </div>  

  </div>
</div>
