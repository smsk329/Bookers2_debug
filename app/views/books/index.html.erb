
<div class='container px-5 px-sm-0'>
<!--部分テンプレート；エラーメッセージ-->
<%= render 'layouts/errors', obj: @book %>

　<div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <!--部分テンプレート；左上-->
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <!--部分テンプレート；左下-->
      <%= render 'form', book: @book %>
    </div>
    
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <!--部分テンプレート；右側-->
      <%= render 'index', books: @books %>
    </div>
  </div>
  
</div>