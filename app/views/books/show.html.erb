<div class='container'>
  <div class='row'>

    <div class='col-md-3'>
      <h2>User info</h2>
      <!--部分テンプレート；左上-->
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <!--部分テンプレート；左下-->
      <%= render 'form', book: Book.new %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>

        <!--一致するレコードが存在する＝すでにいいね済みの場合はdestroyアクションへ-->
          <% if @book.favorited_by?(current_user) %>
          <p>
            <%= link_to book_favorites_path(@book.id), method: :delete do %>
              <span style="color:red;">♥︎</span><%= @book.favorites.count %>
            <% end %>
          </p>

        <!--一致するレコードが存在しない＝まだいいねしていない場合はcreateアクションへ-->
          <% else %>
          <p>
            <%= link_to book_favorites_path(@book.id), method: :post do %>
              <span>♥</span><%= @book.favorites.count %>
            <% end %>
          </p>
        <% end %>
        </td>
        <td>コメント数:<%= @book.book_comments.count %></td>
            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
      </table>
      
      <!--コメントが空白だったときのエラーエッセージ-->
      <%= render 'layouts/errors', obj: @book_comment %>
      
      <!--指定の本についたコメント一覧を表示させる-->
      <table>
        <% @book.book_comments.each do |book_comment| %>
      <tr>
      <!--コメントを投稿したユーザーの情報-->
      <td>
        <%= image_tag book_comment.user.get_profile_image, size:"60x60" %><br>
        <%= link_to book_comment.user.name, user_path(current_user) %>
      </td>
      <!--コメント内容-->
      <td>
        <%= book_comment.comment %>
      </td>
      <!--投稿したユーザーのみに表示される編集・削除ボタン-->
      <td>
      <% if book_comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger", method: :delete %>
      <% end %>
      </td>
      <% end %>
      </tr>
      </table>

      <!--コメントの投稿フォーム-->
      <div>
      <%= form_with model: [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに" %>
        <%= f.submit "送信" %>
      <% end %>
      </div>

    </div>
  </div>
</div>